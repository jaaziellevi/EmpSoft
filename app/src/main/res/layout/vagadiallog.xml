<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/vagaNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="TextView"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <TextView
            android:id="@+id/vagaDescricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/vagaEmpresa"
            android:text="TextView"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <TextView
            android:id="@+id/vagaHorario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/vagaDescricao"
            android:text="TextView"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <TextView
            android:id="@+id/vagaEmpresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/vagaNome"
            android:text="TextView"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <Button
            android:id="@+id/vagaRejeita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rejeitar"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/vagaAceita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aceitar"
            android:layout_above="@+id/vagaRejeita"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</LinearLayout>